
<%= simple_form_for @game, input_html: {class: "col-12"} do |f| %>
  <%= f.input :title ,wrapper_html: {class: "form-group"}, input_html: {class: "form-control"}%>
  <%= f.input :location, wrapper_html: {class: "form-group"}, input_html: {class: "form-control"} %>
  <%=f.association :category, as: :select, wrapper_html: {class: "form-group"}, input_html: {class: "form-control"}%>
  <%=f.input :capacity, wrapper_html: {class: "form-group"}, input_html: {class: "form-control", min: 1, max:10}%>
  <%=f.input :description, wrapper_html: {class: "form-group"}, input_html: {class: "form-control"}%>
  <%= f.button :submit,  class: "btn btn-primary" %>
<% end %>
